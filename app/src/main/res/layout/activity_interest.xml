<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.interest.InterestActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/txt_interest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/acme_regular"
        android:gravity="center"
        android:text="What kind of wallpapers\ndo you like to get?"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_select_6_interest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_interest"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/acme_regular"
        android:text="Select Max 6 Interest"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="center"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_interest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_select_6_interest"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        tools:itemCount="5"
        tools:listitem="@layout/layout_interest"
        android:layout_centerHorizontal="true"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_explore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/gray"
        android:fontFamily="@font/acme_regular"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Explore"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:cornerRadius="50dp" />

</RelativeLayout>